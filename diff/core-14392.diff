+            self.data = self.data[1:]
+
+        if len(self.data) == self.median_count:
+            median = sorted(self.data)[int((self.median_count - 1) / 2)]
+            _LOGGER.debug("Median is: %s", median)
+            self._state = median
+        else:
+            _LOGGER.debug("Not yet enough data for median calculation")
