+        self._brightness = None
+        self._hs = None
+        self._state = None
+        self._name = device['name']
+        self._address = device['address']
+        self._code = device['code']
+        self._type = device['type']
+        self._bulb = lakeside.bulb(self._address, self._code, self._type)
+        self._colormode = False
+        if self._type == "T1011":
