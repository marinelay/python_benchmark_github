+            self._colormode = False
+            temp_in_k = mired_to_kelvin(colortemp)
+            relative_temp = temp_in_k - EUFY_MIN_KELVIN
+            temp = int(relative_temp * 100 /
+                       (EUFY_MAX_KELVIN - EUFY_MIN_KELVIN))
+        else:
+            temp = None
+
+        if hs is not None:
+            rgb = color_util.color_hsv_to_RGB(
